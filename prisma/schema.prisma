generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  messages  Messages[]
  createdAt DateTime   @default(now())

  @@map("user")
}

model Messages {
  id        String   @id @default(uuid())
  chat      User     @relation(fields: [userId], references: [id])
  owner     String
  content   String
  userId    String
  createdAt DateTime @default(now())

  @@map("messages")
}
